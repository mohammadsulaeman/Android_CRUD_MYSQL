<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.universitas"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.UpdateActivity"
            android:theme="@style/nonActionBar"
            android:label="Detail Data"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.UpdateActivity"></activity>
        <activity
            android:name=".activity.InformasiActivity"
            android:label="Informasi"
            android:parentActivityName=".activity.InformasiActivity"
            android:screenOrientation="portrait"
            android:theme="@style/nonActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TambahActivity"
            android:label="Tambah Data"
            android:parentActivityName=".activity.TambahActivity"
            android:screenOrientation="portrait"
            android:theme="@style/nonActionBar" />
        <activity
            android:name=".activity.DetailActivity"
            android:label="Informasi Data"
            android:screenOrientation="portrait"
            android:theme="@style/nonActionBar" />
        <activity android:name=".activity.MainActivity"
            android:theme="@style/nonActionBar"
            android:label="Dashboard"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>